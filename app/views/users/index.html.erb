<h1 id="form-title">Time Matcher *</h1>
<%= page_entries_info @users %>

<div class="listpage">
  <% @users.each do |user| %>
    <div class='user-cell'>
      <div class='avater'>
        <% if user.activated? %>
          <%= link_to image_tag(user.display_image), user_path(user) %>
        <% else %>
          <%= image_tag(user.display_image) %>
        <% end %>
      </div>
      <div class='non-avater'>
        status: <%= user.activated %> <%= user.gender %> <%= user.like_receiving.count %> Likes
        <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @users %>